% this is my second package

\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{mythms}
  [2020/06/28 v0.01 LaTeX package for my own purpose]

\RequirePackage{amsthm}
\RequirePackage{thmtools}

\newcommand*{\myproofname}{Solution\textup:}
\newenvironment{solution}[1][\myproofname]{
  \begin{proof}[#1]
  \renewcommand*{\qedsymbol}{\(\scriptstyle\Diamond\)}
  }{\end{proof}}

\newenvironment{bproof}[1][\myproofname]{
  \begin{proof}[#1]
  \renewcommand*{\qedsymbol}{\(\scriptstyle\blacksquare\)}
  }{\end{proof}}

\newenvironment{sproof}[1][\myproofname]{
  \begin{proof}[#1]
  \renewcommand*{\qedsymbol}{\(\scriptstyle\square\)}
  }{\end{proof}}

\newenvironment{exer}[2][Exercise]{
  \begin{trivlist}
  \item[\hskip \labelsep {\bfseries #1}\hskip \labelsep {\bfseries #2.}]
  }{\end{trivlist}}

 \declaretheoremstyle[
   headfont=\normalfont\itshape,
   headpunct=\textup{:},
   bodyfont=\normalfont,
 ]{myremark}
 \theoremstyle{myremark}
 \newtheorem*{remark}{Claim}

\newtheoremstyle{italicnote}
  {}{}{}{}
  {\bfseries}{.}{ }
  {#1 \italicshape #3}
\endinput
%%
%% End of file `mythms.sty'.